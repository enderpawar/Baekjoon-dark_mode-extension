{
  "manifest_version": 3,
  "name": "백준 다크모드",
  "version": "1.0",
  "description": "백준 온라인 저지(acmicpc.net)를 다크모드로 사용할 수 있게 해주는 확장 프로그램입니다.",
  "permissions": ["storage", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_title": "백준 다크모드",
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.acmicpc.net/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ]
}
